  <div class="plans" id="plans">
  {% assign count = 0 %}
  
  {% if section.blocks %}
    {% for item in section.blocks %}
        {% assign countResult = count | modulo: 2  %}
        {% if countResult == 0 %}
        <section class="plans-white" id="{{ item.settings.page_id }}">
          {% if item.settings.section_bg_img %}
            <img class="bg-plans" src="{{ item.settings.section_bg_img | img_url: 'master'}}" alt="" />
          {% endif %}
          <div class="capa"></div>
          <div class="plans-content container">
            <div class="row">
              <div class="text text-white col-12 col-md-6 col-lg-6 col-xl-6" data-aos="fade-right">
                <div class="section-title-white">
                  <p class="title-primary">{{ item.settings.section_title }}</p>
                </div>
                <p class="mt-3 mb-4">
                  {{ item.settings.section_desc }}
                </p>
                <div class="description-button mt-3 mb-3">
                  <div class="button-green-container">
                    {% if item.settings.link %}
                      {% assign url_p1 = section.url | append: item.settings.link %}
                      <a href="{{ url_p1 }}"><button class="button button-green">{{ item.settings.section_txt_btn }}</button></a>
                    {% endif %}
                  </div>
                </div>
              </div>
              <div class="image-plans col-md-6 col-lg-6 col-xl-6" data-aos="fade-left">
                {% if item.settings.section_img %}
                  <img class="img-fluid" src="{{ item.settings.section_img | img_url: 'master' }}" alt="" />
                {% endif %}
              </div>
            </div>
          </div>
        </section>
      {% endif %}
       {% if countResult != 0 %}
        <section class="plans-color" id="{{ item.settings.page_id }}">
          {% if item.settings.section_bg_img %}
            <img class="bg-plans" src="{{ item.settings.section_bg_img | img_url: 'master' }}" alt="" />
          {% endif %}
          <div class="capa-plans-color"></div>
          <div class="plans-content container">
            <div class="row">
              <div class="image-plans col-md-6 col-lg-6 col-xl-6" data-aos="fade-right">
                {% if item.settings.section_img %}
                  <img class="img-fluid" src="{{ item.settings.section_img | img_url: 'master' }}" alt="" />
                {% endif %}
              </div>
              <div class="text col-12 col-md-6 col-lg-6 col-xl-6" data-aos="fade-left">
                <div class="section-title-white">
                  <p class="title-primary">{{ item.settings.section_title }}</p>
                </div>
                <p class="mt-3 mb-4">
                  {{ item.settings.section_desc }}
                </p>
                <div class="description-button mt-3 mb-3">
                  <div class="button-green-container">
                    {% if item.settings.link %}
                      {% assign url_p2 = section.url | append: item.settings.link %}
                      <a href="{{ url_p2 }}"><button class="button button-green">{{ item.settings.section_txt_btn }}</button></a>
                    {% endif %}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
      {% endif %}
      {% assign count = count | plus: 1 %}
    {% endfor %}
  {% else %}
    {% comment %} no rows found {% endcomment %}
  {% endif %}
</div> 

